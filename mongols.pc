prefix=/usr/local
exec_prefix=${prefix}
includedir=${prefix}/include
libdir=${exec_prefix}/lib

Name: mongols
Description: The mongols library,a library for c++
Version: 1.0.9
URL: https://github.com/webcpp/mongols
Requires:
Libs: -L${libdir} -lmongols
Libs.private: -lssl -lcrypto -lm -lpcre -lz -lpthread -ldl -lstdc++
Cflags: -I${includedir}/mongols -I${includedir}/mongols/lib
